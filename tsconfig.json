{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES2020",
    "strict": true,
    "sourceMap": true,
    "jsx": "preserve",
    "allowJs": true,
    "baseUrl": "./",
    "lib": [
      "ES2018",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "@vuedx/typescript-plugin-vue"
      }
    ],
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@commands/*": [
        "cypress/support/commands/*"
      ],
      "@fixtures/*": [
        "cypress/fixture/*"
      ]
    },
    "types": [
      "cypress-real-events",
      "node",
      "cypress",
      "@4tw/cypress-drag-drop"
    ],
  },
  "include": [
    "cypress/**/*.ts",
    "src/**/*"
  ]
  
}